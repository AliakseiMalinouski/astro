---
import type { JSX } from 'astro/jsx-runtime';
import ListItem from '../components/list_item/list_item.astro';

    type Props = {
        title: string;
        children: JSX.Element;
    }

    const {
        title,
    } = Astro.props;


const items = [
	{
		id: 1,
		path: '/',
		title: 'Root',
	},
	{
		id: 2,
		path: '/about',
		title: 'About',
	}
]

const [_, currentPath] = Astro.url.pathname.split('/');
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<h1>{title}</h1>
		{items.map((item) => (
			<ListItem
				url={item.path}
				title={item.title}
				description={item.title}
				selected={item.path === currentPath}
			/>
		))}
		<section class="layout-section">
            <slot/>
        </section>
	</body>
</html>

<style >
	.layout-section {
		width: 80%;
		min-height: 200px;
		border: 1px solid black;
	}
</style>
