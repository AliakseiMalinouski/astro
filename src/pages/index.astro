---
import Layout from "../layout/layout.astro";
import Button from "../components/button/button.astro";
import UserPanel from "../components/user_panel/user_panel.astro";
import { Images } from '../components/images'

/**
 * optimized images
 * 
 * import image from './assets/image.jpg';
 * import { getImage } from 'astro:assets';
 * 
 * const optimizedImage = await getImage({ src: image, format: 'webp' });
 * const optimizedImageUrl = `url${optimizedImage.src}`; - can be set to styles vars attr
 */

const images = await Astro.glob('./path/to/images');

const preparedImages = images.map((image) => ({
	data: image.default,
	alt: 'I am some image',
}));
---

<Layout title="Entry">
	<Button text="click" />
	<Images images={preparedImages} />
	<UserPanel user={'user'} isAdmin={true} />
</Layout>
